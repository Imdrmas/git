
            <plugin>
                <groupId>cz.habarta.typescript-generator</groupId>
                <artifactId>typescript-generator-maven-plugin</artifactId>
                <version>2.8.449</version>
                <executions>
                    <execution>
                        <id>generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <phase>process-classes</phase>
                    </execution>
                </executions>
                <configuration>
                    <jsonLibrary>jackson2</jsonLibrary>
                    <classPatterns>
                        <pattern>com.issamdrmas.demoheroku.**DTO</pattern>
                    </classPatterns>
                    <customTypeMappings>
                        <mapping>java.sql.Timestamp:Date</mapping>
                    </customTypeMappings>
                    <mapEnum>asEnum</mapEnum>
                    <stringQuotes>singleQuotes</stringQuotes>
                    <outputFile>target/rest.d.ts</outputFile>
                    <outputKind>module</outputKind>
                    <optionalProperties>useSpecifiedAnnotations</optionalProperties>
                    <optionalAnnotations>
                        <optionalAnnotation>org.springframework.lang.Nullable</optionalAnnotation>
                    </optionalAnnotations>
                    <optionalPropertiesDeclaration>questionMarkAndNullableType</optionalPropertiesDeclaration>
                    <noFileComment>true</noFileComment>
                    <sortDeclarations>true</sortDeclarations>
                </configuration>
            </plugin>

